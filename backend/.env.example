# Server
PORT=5001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/docuchain

# Auth
JWT_SECRET=your_jwt_secret

# CORS (comma-separated origins). Example: https://docu-chain-h85.vercel.app,https://your-admin.com
CORS_ORIGINS=*

# Logging
# REQUEST_LOGGING=off  # uncomment to disable access logs

# Frontend serving (optional in single-port mode). On Render keep false and deploy FE separately.
SERVE_FRONTEND=false

# Dev-only test upload endpoints
ENABLE_DIRECT_TEST_UPLOADS=false

# Foxit base URLs
FOXIT_BASE_URL=https://na1.fusion.foxit.com
# Optional explicit PDF services endpoints (will auto-normalize hyphenated host)
# FOXIT_PDF_BASE_URL=https://app.developer-api.foxit.com
# FOXIT_PDF_API_BASE=https://app.developer-api.foxit.com/pdf-services/api
# FOXIT_OAUTH_TOKEN_URL=https://na1.fusion.foxit.com/oauth2/token

# Foxit OAuth (Doc Gen)
FOXIT_DOCGEN_ID=
FOXIT_DOCGEN_SECRET=
FOXIT_DOCGEN_SCOPE=

# Foxit OAuth (PDF API)
FOXIT_PDF_ID=FOXIT_PDF_SCOPE=

# Optional
OPENAI_API_KEY=your_openai_api_key

FOXIT_PDF_SECRET=